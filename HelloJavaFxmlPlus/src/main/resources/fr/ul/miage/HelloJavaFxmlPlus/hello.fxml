<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.ul.miage.HelloJavaFxmlPlus.HelloControler">
   <center>
      <BorderPane prefHeight="300.0" prefWidth="500.0" BorderPane.alignment="CENTER">
         <bottom>
            <Button fx:id="btn" mnemonicParsing="false" onAction="#sayHello" text="Button" BorderPane.alignment="CENTER" />
         </bottom>
         <center>
            <TextArea fx:id="ta" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </center>
   <top>
      <Button fx:id="btn_fichier" mnemonicParsing="false" onAction="#get_fichier" text="Choisir un fichier" BorderPane.alignment="CENTER" />
   </top>
</BorderPane>
