<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11" fx:controller="fr.ul.miage.HelloJavaFXML.HelloControler">
   <center>
      <BorderPane prefHeight="300.0" prefWidth="500.0" BorderPane.alignment="CENTER">
         <bottom>
            <Button fx:id="btn" mnemonicParsing="false" onAction="#sayHello" text="Button" BorderPane.alignment="CENTER" />
         </bottom>
         <center>
            <TextArea fx:id="ta" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </center>
</BorderPane>
